@model List<AcunMedyaAkademiPortfolio.Models.TblProject>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<table class=" table table-bordered">
    <tr>
        <th>Proje ID'si</th>
        <th>Proje İsmi</th>
        <th>Proje Resmi</th>
        <th>ProjeKategori ID'si</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProjectId</td>
            <td>@item.ProjectName</td>
            <td align="center">
                <img src="@item.ProjectImageUrl" style="width:150px" />
            </td>
            <td>@item.ProjectCategoryId</td>
            <td><a href="/Project/UpdateProject/@item.ProjectId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Project/DeleteProject/@item.ProjectId" class="btn btn-danger">Sil</a></td>

        </tr>

    }
</table>
<td><a href="/Project/CreateProject" class="btn btn-info">Yeni Proje Ekle</a></td>


