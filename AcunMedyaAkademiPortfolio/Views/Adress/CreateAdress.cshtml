@model AcunMedyaAkademiPortfolio.Models.TblAdress
@{
    ViewBag.Title = "CreateAdress";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yeni Adres Ekleme</h2>
<form method="post">

    <label>Adres İsmi</label>
    @Html.TextBoxFor(x => x.Adress, new { @class = "form-control" })
    <br />
    <label>Telefon Numarası</label>
    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
    <br />
    <label>Emaili</label>
    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    <br />
    <label>Websitesi</label>
    @Html.TextBoxFor(x => x.Website, new { @class = "form-control" })
    <br />

    <button class="btn btn-info">Referans Kaydet</button>


</form>
