@model AcunMedyaAkademiPortfolio.Models.TblAdress
@{
    ViewBag.Title = "UpdateAdress";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yeni Referans Güncelleme</h2>
<form method="post">

    <label>Adres ID'si</label>
    @Html.TextBoxFor(x => x.AdressId, new { @class = "form-control" })
    <br />
    <label>Adres</label>
    @Html.TextBoxFor(x => x.Adress, new { @class = "form-control" })
    <br />
    <label>Telefon Numarası</label>
    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
    <br />
    <label>Emaili</label>
    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    <br />
    <label>Websitesi</label>
    @Html.TextBoxFor(x => x.Website, new { @class = "form-control" })
    <br />

    <button class="btn btn-info">Referansı Güncelle</button>

</form>



