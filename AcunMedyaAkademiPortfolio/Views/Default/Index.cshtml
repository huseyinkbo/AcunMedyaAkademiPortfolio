
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

@Html.Action("PartialHead","Default") 

<body data-spy="scroll" data-target=".site-navbar-target" data-offset="300">

    @Html.Action("PartialNavbar", "Default")

    @Html.Action("PartialFeature", "Default")

    @Html.Action("PartialStatistic", "Default")

    <section class="ftco-about ftco-section ftco-no-pt ftco-no-pb" id="about-section">
        <div class="container">
            <div class="row d-flex no-gutters">
                <div class="col-md-6 col-lg-5 d-flex">
                    <div class="img-about img d-flex align-items-stretch">
                        <div class="overlay"></div>
                        <div class="img d-flex align-self-stretch align-items-center" style="background-image:url(/Template/clyde-master11/images/foto3.jpeg);">
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-7 pl-md-4 pl-lg-5 py-5">
                    <div class="py-md-5">
                        <div class="row justify-content-start pb-3">
                            <div class="col-md-12 heading-section ftco-animate">
                                @Html.Action("PartialAbout", "Default")
                                @Html.Action("PartialProfile", "Default")
                            </div>

                            <div class="col-md-12">
                                <div class="my-interest d-lg-flex w-100">
                                    @Html.Action("PartialHobby", "Default")
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    @Html.Action("PartialSkill", "Default")

    @Html.Action("PartialService", "Default")

    <section class="ftco-hireme">
        <div class="container">
            <div class="row justify-content-between">
                <div class="col-md-8 col-lg-8 d-flex align-items-center">
                    <div class="w-100 py-4">
                        <h2>Aklında bir proje varsa eğer.</h2>
                        <p>Hemen Benimle İletişime Geç.</p>
                        <p class="mb-0"><a href="#contact-section" class="btn btn-white py-3 px-4">İletişim</a></p>
                    </div>
                </div>
                <div class="col-md-4 col-lg-4 d-flex align-items-end">
                    <img src="images/author.png" class="img-fluid" alt="">
                </div>
            </div>
        </div>
    </section>


    @Html.Action("PartialProject", "Default")
    @Html.Action("PartialTestimonial", "Default")

    <section class="ftco-section contact-section ftco-no-pb" id="contact-section">
        <div class="container">
            <div class="row justify-content-center mb-5 pb-3">
                <div class="col-md-7 heading-section text-center ftco-animate">
                    <span class="subheading">Bizimle İletişime Geçin</span>
                    <h2 class="mb-4">Bir Projenizmi Var?</h2>
                    <p>Hemen Projenizi hayata geçirmekte yardımcı olalım.</p>
                </div>
            </div>

            <div class="row block-9">
                @Html.Action("PartialContact", "Default")
                @Html.Action("PartialAdress", "Default")
             
            </div>
        </div>
    </section>

    <footer class="ftco-footer ftco-section">
        <div class="container">
            <div class="row mb-5">
                <div class="col-md">
                    <div class="ftco-footer-widget mb-4">
                        <h2 class="ftco-heading-2">Hüseyin Bayraktar</</h2>
                        <p>Copyrighted by Hüseyin Bayraktar</p>
                        <p><a href="#home-section" class="btn btn-primary">Daha fazlasını öğren..</a></p>
                    </div>
                </div>
                <div class="col-md">
                    <div class="ftco-footer-widget mb-4 ml-md-4">
                        <h2 class="ftco-heading-2">Links</h2>
                        <ul class="list-unstyled">
                            <li><a href="#home-section"><span class="fa fa-chevron-right mr-2"></span>Anasayfa</a></li>
                            <li><a href="#about-section"><span class="fa fa-chevron-right mr-2"></span>Hakkımda</a></li>
                            <li><a href="#services-section"><span class="fa fa-chevron-right mr-2"></span>Servisler</a></li>
                            <li><a href="#projects-section"><span class="fa fa-chevron-right mr-2"></span>Projeler</a></li>
                            <li><a href="#contact-section"><span class="fa fa-chevron-right mr-2"></span>İletişim</a></li>
                        </ul>
                    </div>
                </div>

                @Html.Action("PartialFooter1", "Default")
             
            <div class="col-md">
                <div class="ftco-footer-widget mb-4">
                    <h2 class="ftco-heading-2">Bir Sorunuz mu Var?</h2>
                </div>
                @Html.Action("PartialFooter2", "Default")

                @Html.Action("PartialFooterSMedia","Default")
                
            </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-center">
                    <p>             
                        Copyright &copy;
                        <script>document.write(new Date().getFullYear());</script> Tüm Copyright Hakları Hüseyin Bayraktar'a Aittir <i class="fa fa-heart" aria-hidden="true"></i> by <a href="https://colorlib.com" target="_blank">Bayraktar</a>               
                    </p>
                </div>
            </div>     
    </footer>



    <!-- loader -->
    <div id="ftco-loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" /><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00" /></svg></div>


    @Html.Action("PartialScript","Default")
   
</body>
</html>
