@model List<AcunMedyaAkademiPortfolio.Models.TblAbout>
@{
    ViewBag.Title = "AboutList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<table class="table table-bordered">
<tr>
    <th>#</th>
    <th>Açıklama</th>
    <th>Başlık</th>
    <th>Image URL'si</th>
    <th>Güncelle</th>
    <th>Sil</th>
</tr>
@foreach (var item in Model)
{
    <tr>
        <td>@item.AboutId</td>
        <td>@item.Description</td>
        <td>@item.Title</td>
        <td>@item.ImageUrl</td>
        <td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn-warning">Güncelle</a></td>
        <td><a href="/About/DeleteAbout/@item.AboutId" class="btn btn-danger">Sil</a></td>

    </tr>
}
</table>
<td><a href="/About/CreateAbout" class="btn btn-info">Yeni Açıklama Ekle</a></td>

